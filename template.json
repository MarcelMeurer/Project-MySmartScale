{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "defaultValue": "Enter a unique hostname for SQL, Web Server and Log Analytics ",
      "type": "string"
    },
    "SqlPassword": {
      "defaultValue": "AsuperSecretPasswordForThe@DataBas1!",
      "type": "securestring"
    }
  },
  "variables": {
    "connectionString" : "[concat('Server=tcp:',parameters('siteName'),'.database.windows.net,1433;Initial Catalog=MySmartScale;Persist Security Info=False;User ID=dbadmin;Password=',parameters('SqlPassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=90;')]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2015-05-01-preview",
      "name": "[parameters('siteName')]",
      "location": "[resourceGroup().location]",      
      "kind": "v12.0",
      "properties": {
          "administratorLogin": "dbadmin",
          "administratorLoginPassword": "[parameters('SqlPassword')]",
          "version": "12.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('siteName'), '/MySmartScale')]",
      "location": "[resourceGroup().location]",
      "sku": {
          "name": "S0",
          "tier": "Standard"
      },
      "kind": "v12.0,user",
      "properties": {
          "collation": "SQL_Latin1_General_CP1_CI_AS",
          "catalogCollation": "SQL_Latin1_General_CP1_CI_AS"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('siteName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2015-05-01-preview",
      "name": "[concat(parameters('siteName'), '/AllowAllWindowsAzureIps')]",
      "dependsOn": [
          "[resourceId('Microsoft.Sql/servers', parameters('siteName'))]"
      ],
      "properties": {
          "startIpAddress": "0.0.0.0",
          "endIpAddress": "0.0.0.0"
      }
    },
    {
      "apiVersion": "2017-03-15-preview",
      "name": "[parameters('siteName')]",
      "type": "Microsoft.OperationalInsights/workspaces",
      "location": "[resourceGroup().location]",
      
      "properties": {
        "sku": { "Name": "PerGB2018" },
        "retentionInDays": 90
      }   
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[parameters('siteName')]",
      "location": "[resourceGroup().location]",
      "sku": {
          "name": "S1",
          "tier": "Standard",
          "size": "S1",
          "family": "S",
          "capacity": 1
      },
      "kind": "app",
      "properties": {
          "name": "[parameters('siteName')]",
          "perSiteScaling": false,
          "reserved": false,
          "targetWorkerCount": 0,
          "targetWorkerSizeId": 0
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', parameters('siteName'), 'MySmartScale')]",
        "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('siteName'))]"
      ]
    },
    {
      "type": "Microsoft.Insights/components",
      "kind": "web",
      "name": "[parameters('siteName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {},
      "scale": null,
      "properties": {
        "Application_Type": "web"
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('siteName'),'-data')]",
      "location": "West Europe",
      "kind": "app",
      "properties": {
          "enabled": true,
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',parameters('siteName'))]",
          "httpsOnly": true,
          "siteConfig":{
            "alwaysOn":true,
            "use32BitWorkerProcess":false
          }
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2016-08-01",
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('microsoft.insights/components/', parameters('siteName'))).InstrumentationKey]",
            "AzureControl-ConsolidateSessionDataLastCompleteTimeInMinutes": "1",
            "AzureControl-DefaultTimeouForAzureAccesstInSeconds": "30",
            "AzureControl-PowerStateChangeInAzureTimeoutInSeconds": "180",
            "AzureControl-PowerStateUpdateToOldInHours": "8",
            "AzureControl-RefreshConfigurationEachMinutes": "5",
            "AzureControl-RetryCount": "99",
            "AzureControl-SessionTimeBackValidInMinutes": "15",
            "AzureControl-TryToBuildSiteCollectionStateAfterAlongerBreak": "1",
            "AzureControl-WaitForCheckPowerStateAgainInMinutes": "0",
            "cfg:DefaultTenantGuid": "1AF04A50-3F2F-420A-93B8-2D2A1EFF6CF1",
            "ida:ClientId": "<OPTIONAL: Enter the client id of your service principal>",
            "ida:Domain": "<OPTIONAL: Enter the id of your Azure AD tenant>",
            "ida:TenantId": "<OPTIONAL: Enter the id of your Azure AD tenant>",
            "LicenseKey":"",
            "AzureMonitor-Key": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', parameters('siteName')), '2015-03-20').primarySharedKey]",
            "AzureMonitor-LogTypeName": "MySmartScale",
            "AzureMonitor-Workspace": "[reference(resourceId('Microsoft.OperationalInsights/workspaces',parameters('siteName'))).customerId]",
            "PROJECT": "bin/Endpoint"
          }, 
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat(parameters('siteName'),'-data'))]"
          ]
        },
        {
          "name": "connectionstrings",
          "type": "config",
          "apiVersion": "2016-08-01",
          "properties": {            
            "ScContext": {
              "value": "[variables('connectionString')]",
              "type": "SQLAzure"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat(parameters('siteName'),'-data'))]"
          ]
        },
        {
          "name": "web",
          "type": "sourcecontrols",
          "apiVersion": "2016-08-01",
          "properties":{
            "RepoUrl": "https://github.com/MarcelMeurer/Project-MySmartScale.git",
            "branch": "master",
            "IsManualIntegration": true
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat(parameters('siteName'),'-data'))]"
          ]
        }
      ],
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('siteName'))]",
        "[resourceId('Microsoft.Insights/components', parameters('siteName'))]",
        "[resourceId('Microsoft.Sql/servers/databases', parameters('siteName'), 'MySmartScale')]"
      ]
  },
  {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-02-01",
      "name": "[concat(parameters('siteName'),'-portal')]",
      "location": "[resourceGroup().location]",
      "kind": "app",
      "properties": {
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',parameters('siteName'))]",
          "httpsOnly": true,
          "siteConfig":{
            "alwaysOn":true,
            "use32BitWorkerProcess":false,
            "appSettings": [
              {"testmmmmmm":"hhahahahahahaah"},
              {"test111111":"99999999"}
            ]
          }
      },

      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('siteName'))]",
        "[resourceId('Microsoft.Insights/components', parameters('siteName'))]",
        "[resourceId('Microsoft.Sql/servers/databases', parameters('siteName'), 'MySmartScale')]"
      ]
    }
  ]
}